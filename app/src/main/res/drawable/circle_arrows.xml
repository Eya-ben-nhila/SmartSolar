<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer circle (thin ring) -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#4DFFFFFF" />
            <solid android:color="@android:color/transparent" />
            <size
                android:width="120dp"
                android:height="120dp" />
        </shape>
    </item>

    <!-- Arrow 1 (Top) -->
    <item
        android:left="54dp"
        android:top="10dp"
        android:right="54dp"
        android:bottom="88dp">
        <rotate
            android:fromDegrees="0"
            android:toDegrees="0">
            <vector android:height="24dp"
                android:width="24dp"
                android:viewportWidth="24"
                android:viewportHeight="24">
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M7,10l5,5 5,-5z"
                    android:strokeWidth="1"
                    android:strokeColor="#FFFFFF"/>
            </vector>
        </rotate>
    </item>

    <!-- Arrow 2 (Right) -->
    <item
        android:left="88dp"
        android:top="54dp"
        android:right="10dp"
        android:bottom="54dp">
        <rotate
            android:fromDegrees="90"
            android:toDegrees="90">
            <vector android:height="24dp"
                android:width="24dp"
                android:viewportWidth="24"
                android:viewportHeight="24">
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M7,10l5,5 5,-5z"
                    android:strokeWidth="1"
                    android:strokeColor="#FFFFFF"/>
            </vector>
        </rotate>
    </item>

    <!-- Arrow 3 (Bottom) -->
    <item
        android:left="54dp"
        android:top="88dp"
        android:right="54dp"
        android:bottom="10dp">
        <rotate
            android:fromDegrees="180"
            android:toDegrees="180">
            <vector android:height="24dp"
                android:width="24dp"
                android:viewportWidth="24"
                android:viewportHeight="24">
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M7,10l5,5 5,-5z"
                    android:strokeWidth="1"
                    android:strokeColor="#FFFFFF"/>
            </vector>
        </rotate>
    </item>

    <!-- Arrow 4 (Left) -->
    <item
        android:left="10dp"
        android:top="54dp"
        android:right="88dp"
        android:bottom="54dp">
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <vector android:height="24dp"
                android:width="24dp"
                android:viewportWidth="24"
                android:viewportHeight="24">
                <path
                    android:fillColor="#FFFFFF"
                    android:pathData="M7,10l5,5 5,-5z"
                    android:strokeWidth="1"
                    android:strokeColor="#FFFFFF"/>
            </vector>
        </rotate>
    </item>
</layer-list>
